{
    "$schema": "http://json-schema.org/schema#",
    "title": "Libvirt port-forwarding hook configuration schema",
    "type": "object",
    "patternProperties": {
        "^[A-Za-z_\\-]": {
            "oneOf": [
                {
                    "title": "Libvirt domain name",
                    "type": "object",
                    "properties": {
                        "interface": {
                            "type": "string"
                        },
                        "private_ip": {
                            "type": "string"
                        },
                        "private_ipv6": {
                            "type": "string"
                        },
                        "public_ip": {
                            "type": "string"
                        },
                        "public_ipv6": {
                            "type": "string"
                        },
                        "source_ip": {
                            "type": "string"
                        },
                        "source_ipv6": {
                            "type": "string"
                        },
                        "port_map": {
                            "type": "object",
                            "patternProperties": {
                                "^tcp|udp|icmp": {
                                    "title": "Per-protocol port mapping",
                                    "type": "array",
                                    "items": {
                                        "oneOf": [
                                            {
                                                "title": "public and private port",
                                                "type": "integer"
                                            },
                                            {
                                                "title": "Public / private port map list",
                                                "type": "array",
                                                "items": {
                                                    "title": "Public / private port pair",
                                                    "type": "integer"
                                                },
                                                "minItems": 2,
                                                "maxItems": 2,
                                                "additionalItems": false
                                            }
                                        ]
                                    },
                                    "additionalItems": false,
                                    "minItems": 1,
                                    "uniqueItems": true
                                }
                            },
                            "additionalProperties": false,
                            "minProperties": 1
                        },
                        "port_range": {
                            "title": "Per-protocol port mapping",
                            "type": "array",
                            "items": {
                                "title": "Range port map list",
                                "type": "object",
                                "properties": {
                                    "init_port": {
                                        "title": "First port of the range",
                                        "type": "integer"
                                    },
                                    "ports_num": {
                                        "title": "Number of ports in the range",
                                        "type": "integer"
                                    },
                                    "protocol": {
                                        "title": "Per protocol port mapping",
                                        "type": "string",
                                        "enum": [
                                            "tcp",
                                            "udp",
                                            "icmp"
                                        ]
                                    }
                                },
                                "required": [
                                    "init_port",
                                    "ports_num",
                                    "protocol"
                                ],
                                "additionalItems": false
                            },
                            "additionalItems": false,
                            "minItems": 1,
                            "uniqueItems": true
                        }
                    },
                    "required": [
                        "private_ip"
                    ],
                    "additionalProperties": false
                },
                {
                    "title": "Array of domains",
                    "type": "array",
                    "items": {
                        "title": "Libvirt domain name",
                        "type": "object",
                        "properties": {
                            "interface": {
                                "type": "string"
                            },
                            "private_ip": {
                                "type": "string"
                            },
                            "private_ipv6": {
                                "type": "string"
                            },
                            "public_ip": {
                                "type": "string"
                            },
                            "public_ipv6": {
                                "type": "string"
                            },
                            "source_ip": {
                                "type": "string"
                            },
                            "source_ipv6": {
                                "type": "string"
                            },
                            "port_map": {
                                "type": "object",
                                "patternProperties": {
                                    "^tcp|udp|icmp": {
                                        "title": "Per-protocol port mapping",
                                        "type": "array",
                                        "items": {
                                            "oneOf": [
                                                {
                                                    "title": "public and private port",
                                                    "type": "integer"
                                                },
                                                {
                                                    "title": "Public / private port map list",
                                                    "type": "array",
                                                    "items": {
                                                        "title": "Public / private port pair",
                                                        "type": "integer"
                                                    },
                                                    "minItems": 2,
                                                    "maxItems": 2,
                                                    "additionalItems": false
                                                }
                                            ]
                                        },
                                        "additionalItems": false,
                                        "minItems": 1,
                                        "uniqueItems": true
                                    }
                                },
                                "additionalProperties": false,
                                "minProperties": 1
                            },
                            "port_range": {
                                "title": "Per-protocol port mapping",
                                "type": "array",
                                "items": {
                                    "title": "Range port map list",
                                    "type": "object",
                                    "properties": {
                                        "init_port": {
                                            "title": "First port of the range",
                                            "type": "integer"
                                        },
                                        "ports_num": {
                                            "title": "Number of ports in the range",
                                            "type": "integer"
                                        },
                                        "protocol": {
                                            "title": "Per protocol port mapping",
                                            "type": "string",
                                            "enum": [
                                                "tcp",
                                                "udp",
                                                "icmp"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "init_port",
                                        "ports_num",
                                        "protocol"
                                    ],
                                    "additionalItems": false
                                },
                                "additionalItems": false,
                                "minItems": 1,
                                "uniqueItems": true
                            }
                        },
                        "required": [
                            "private_ip"
                        ],
                        "additionalProperties": false
                    }
                }
            ]
        }
    },
    "minProperties": 1
}
